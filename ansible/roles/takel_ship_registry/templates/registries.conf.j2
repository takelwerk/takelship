unqualified-search-registries = ["docker.io", "ghcr.io", "quay.io", "codeberg.org"]
short-name-mode = "permissive"

[aliases]
{% for service in takel_ship_compose_services %}
{% if 'images' in service %}
{% for image in service['images'] %}
{% if not image in takel_ship_registry_takelship_images %}
"{{ image['alias'] }}" = "localhost:{{ takel_ship_registry_takelship_registry_http_5555['port'] }}/{{ image['name'] }}"
{% endif %}
{% endfor %}
{% endif %}
{% endfor %}

[[registry]]
location = "localhost:{{ takel_ship_registry_takelship_registry_http_5555['port'] }}"
insecure = true

[[registry]]
location = "localhost:{{ takel_ship_registry_server_http_35000['port'] }}"
insecure = true
