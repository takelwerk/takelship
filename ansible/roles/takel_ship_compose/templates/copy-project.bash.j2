{{ takel_ship_scripts_shebang }}

DIST={{ takel_ship_compose_home_dir }}/{{ takel_ship_compose_dist_dir }}/{{ takel_ship_compose_compose_dir }}
DATA={{ takel_ship_compose_home_dir }}/{{ takel_ship_compose_data_dir }}/{{ takel_ship_compose_compose_dir }}

mkdir --parents $DATA/{{ takel_ship_compose_projects_dir }}
cp $DIST/{{ takel_ship_compose_projects_dir }}/{{ takel_ship_compose_script_takelship_yml['name'] }} $DATA/{{ takel_ship_compose_projects_dir }}
cp --recursive $DIST/{{ takel_ship_registry_takelship_service['name'] }} $DATA
{% for service in takel_ship_compose_project['services'] %}
cp --recursive $DIST/{{ service['name'] }} $DATA
cp $DIST/{{ takel_ship_compose_projects_dir }}/*{{ takel_ship_compose_project['name'] }}* $DATA/{{ takel_ship_compose_projects_dir }}
{% endfor %}
